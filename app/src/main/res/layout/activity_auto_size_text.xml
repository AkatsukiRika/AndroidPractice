<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:background="#E6E6DE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_using_xml"
            android:textSize="30sp"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limit_height"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_limit_height"
            android:background="@drawable/shape_bg_text_border"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="32sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore."
            tools:ignore="HardcodedText,UnusedAttribute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_height_minus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬇"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100 dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginHorizontal="24dp" />

            <Button
                android:id="@+id/btn_height_plus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬆"
                android:textSize="16sp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limit_lines"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_limit_lines"
            android:background="@drawable/shape_bg_text_border"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="32sp"
            android:maxLines="4"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            tools:ignore="HardcodedText,UnusedAttribute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lines_minus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬇"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_lines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginHorizontal="24dp" />

            <Button
                android:id="@+id/btn_lines_plus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬆"
                android:textSize="16sp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limit_width"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_limit_width"
            android:layout_width="320dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:text="Excepteur sint occaecat cupidatat non proident"
            android:textColor="@color/black"
            android:background="@drawable/shape_bg_text_border"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="32sp"
            android:maxLines="1"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_width_minus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬇"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="320 dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginHorizontal="24dp" />

            <Button
                android:id="@+id/btn_width_plus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⬆"
                android:textSize="16sp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>